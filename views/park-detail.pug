extends layout 
block content
    
    h3=park.parkName
    div
         ul 
            li Location: #{park.city}, #{park.provinceState}, #{park.country}      
            li Opened: #{park.opened}
            li Size: #{park.size}
    div 
         p=park.description
    div
        a(class="btn btn-success" role="button" href=`/park/edit/${park.id}`) Edit
        a(class="btn btn-success" role="button" href=`/park/delete/${park.id}`) Delete
        a(class="btn btn-success" role="button" href=`/parks`) Return to list

